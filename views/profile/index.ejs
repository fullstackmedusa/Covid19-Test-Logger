<!DOCTYPE html>
<html>

<head>
    <title> Covid Tracker- Profile</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <nav class="nav-bar">
        <a href="/logout">logout</a>
        <a href="/tests">All Tests</a>
    </nav>
    <div class="user-profile-table">
        <h1>My Profile</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Vaccination Status</th>
                    <th>Vaccine</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= profile.name %>
                    </td>
                    <td>
                        <%= profile.vaccination_status %>
                    </td>
                    <td>
                        <%= profile.vaccine %>
                    </td>
                    <td><a href="/tests/<%= profile._id %>">test details</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
     <a href="/profile/tests/new">Add new test/a>
    </div>
    <br>
    <div>COVID-19 Tests:</div>
    </br>
    <% if (tests.length) { %>
        <%tests.forEach(function (t){%>
            <div class="test-info">Date Tested<%=t.date_tested%>
            </div>
            <div class="ticket-info">Test Type<%=t.test_type%>
            </div>
            <div class="test-info">Result<%=t.test_result%>
            </div>
            <%})%>
                <% } else { %>
                    <div>No tests yet</div>
                    <form id="delete-test-form" action="/profile/tests/<%=t._id%>?_method=DELETE" method="POST">
                        <button type="submit">Delete Test</button>
                    </form>
                    <%}%>


                        <div>
                            <a href="/profile/edit/<%=profile._id%>">edit profile</a>
                        </div>
</body>

</html>